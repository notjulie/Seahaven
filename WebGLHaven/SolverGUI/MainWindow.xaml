<Window x:Class="SolverGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolverGUI"
        mc:Ignorable="d"
        Title="Solver GUI" Height="450" Width="800">
   <StackPanel>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
         <local:Card/>
         <local:Card/>
         <local:Card/>
         <local:Card/>
      </StackPanel>
      <StackPanel x:Name="columnsStack" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
         <local:CardStack x:Name="column0"/>
         <local:CardStack x:Name="column1"/>
         <local:CardStack x:Name="column2"/>
         <local:CardStack x:Name="column3"/>
         <local:CardStack x:Name="column4"/>
         <local:CardStack x:Name="column5"/>
         <local:CardStack x:Name="column6"/>
         <local:CardStack x:Name="column7"/>
         <local:CardStack x:Name="column8"/>
         <local:CardStack x:Name="column9"/>
      </StackPanel>
   </StackPanel>
</Window>
