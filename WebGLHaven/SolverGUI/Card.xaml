<UserControl x:Class="SolverGUI.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolverGUI"
             mc:Ignorable="d"
             Focusable="True"
             >
   <StackPanel Margin="5">
      <Border x:Name="border" Width="55" Height="80" Background="AntiqueWhite" CornerRadius="5" BorderThickness="1" BorderBrush="Black">
         <Grid>
            <Label Name="rank" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-5,0,0"/>
            <Label Name="suit" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,0,0" />
         </Grid>
      </Border>
   </StackPanel>
</UserControl>
